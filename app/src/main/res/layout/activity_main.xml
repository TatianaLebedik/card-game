<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_activity_background"
        tools:context=".MainActivity" android:id="@+id/tableLayout">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <Button
                android:text="Go"
                android:layout_width="248dp"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="382dp"
                tools:layout_editor_absoluteX="160dp"
                android:id="@+id/start_button"
                android:onClick="on_start_button_click"
                android:background="@android:color/white"
                android:textSize="36sp" android:textColor="@android:color/black"
                android:layout_marginLeft="400dp" android:layout_marginTop="150dp" android:layout_marginBottom="80dp"/>
    </TableRow>

</TableLayout>